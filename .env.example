# =============================================================================
# Trading Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration
# NEVER commit the actual .env file to version control!

# =============================================================================
# Environment Settings
# =============================================================================
TRADING_ENV=development
# Options: development, staging, production

# =============================================================================
# Infisical Secrets Management Configuration
# =============================================================================
# Get your Infisical credentials at: https://app.infisical.com/
# Infisical provides secure secrets management with automatic rotation
# and audit trails for all your sensitive configuration data.

INFISICAL_CLIENT_ID=your_infisical_client_id_here
INFISICAL_CLIENT_SECRET=your_infisical_client_secret_here
INFISICAL_PROJECT_ID=your_infisical_project_id_here
INFISICAL_ENVIRONMENT=dev
# Options: dev, staging, production

INFISICAL_BASE_URL=https://app.infisical.com
INFISICAL_CACHE_TTL_SECONDS=300
# Cache secrets for 5 minutes to reduce API calls

# =============================================================================
# Fallback Environment Variables (Used if Infisical is unavailable)
# =============================================================================
# These are used as fallback when Infisical is not configured or unavailable
# For production, it's recommended to use Infisical exclusively

# =============================================================================
# Helius API Configuration
# =============================================================================
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_BASE_URL=https://api.helius.xyz/v0
# Get your API key at: https://www.helius.dev/

# =============================================================================
# QuickNode RPC Configuration
# =============================================================================
QUICKNODE_PRIMARY_RPC=https://your-endpoint.solana-mainnet.quiknode.pro/
QUICKNODE_SECONDARY_RPC=https://your-backup-endpoint.solana-mainnet.quiknode.pro/
QUICKNODE_ARCHIVE_RPC=https://your-archive-endpoint.solana-mainnet.quiknode.pro/
# Get your endpoint at: https://www.quicknode.com/

# =============================================================================
# Algorithmic Intelligence Configuration
# =============================================================================
# No external AI dependencies required!
# The bot uses pure algorithmic intelligence for all analysis.

# SENTIMENT_ANALYSIS_ENABLED=true
# Enable algorithmic sentiment analysis (recommended: true)

# PATTERN_RECOGNITION_ENABLED=true
# Enable algorithmic pattern recognition (recommended: true)

# WHALE_TRACKING_ENABLED=true
# Enable whale behavior tracking (recommended: true)

# =============================================================================
# Wallet Configuration
# =============================================================================
WALLET_ADDRESS=your_solana_wallet_address_here
WALLET_PRIVATE_KEY_PATH=/secure/path/to/keypair.json
# SECURITY WARNING: Never commit actual private keys to version control!
# Use a hardware wallet or secure key management solution in production

# =============================================================================
# Trading Parameters
# =============================================================================
INITIAL_CAPITAL=1.0
# Initial capital in SOL (recommended: 1.0 for testing, 10.0+ for production)

MAX_POSITION_SIZE=0.10
# Maximum position size as percentage of portfolio (10% = 0.10)

MAX_DRAWDOWN=0.15
# Maximum drawdown before trading stops (15% = 0.15)

DAILY_TRADE_LIMIT=100
# Maximum number of trades per day

KELLY_FRACTION=0.5
# Kelly Criterion fraction (0.5 = half-Kelly, more conservative)

MIN_POSITION_SIZE=0.005
# Minimum position size as percentage (0.5% = 0.005)

MAX_PORTFOLIO_RISK=0.02
# Maximum risk per trade as percentage (2% = 0.02)

# =============================================================================
# Strategy Configuration
# =============================================================================
RSI_PERIOD=14
OVERSOLD_THRESHOLD=25.0
OVERBOUGHT_THRESHOLD=75.0
MIN_CONFLUENCE_STRENGTH=0.7

ENABLE_ARBITRAGE=true
ENABLE_MOMENTUM=true
ENABLE_MEAN_REVERSION=false

# =============================================================================
# Risk Management Configuration
# =============================================================================
STOP_LOSS_METHOD=support_based
# Options: support_based, atr_based, percentage_based

ATR_MULTIPLIER=1.5
SUPPORT_DISTANCE=0.15
# Support distance percentage (15% = 0.15)

MAX_CORRELATION=0.7
# Maximum correlation between positions (70% = 0.7)

DIVERSIFICATION_TARGET=10
# Target number of positions in portfolio

CIRCUIT_BREAKER_DRAWDOWN=0.10
# Stop trading at 10% drawdown

# =============================================================================
# Execution Configuration
# =============================================================================
MAX_SLIPPAGE=0.02
# Maximum slippage tolerance (2% = 0.02)

MAX_PRIORITY_FEE=0.001
# Maximum priority fee in SOL

TRANSACTION_TIMEOUT=30
# Transaction confirmation timeout in seconds

RETRY_ATTEMPTS=3
# Number of retry attempts for failed transactions

EXECUTION_MODE=paper
# Options: paper, live (start with paper!)

# =============================================================================
# Database Configuration
# =============================================================================
TIMESCALEDB_URL=postgresql://trading_user:trading_password@localhost:5432/trading_db
REDIS_URL=redis://localhost:6379

# Database connection pool settings
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30

# Data retention
DATA_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=30

# =============================================================================
# Monitoring and Logging
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=DEBUG
# Options: DEBUG, INFO, WARN, ERROR

LOG_FORMAT=json
# Options: json, text

METRICS_INTERVAL=60
# Metrics collection interval in seconds

ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_LATENCY_MS=100
DATA_PROCESSING_THREADS=8
CACHE_TTL_SECONDS=300
REQUEST_TIMEOUT_MS=5000

# =============================================================================
# API Rate Limits
# =============================================================================
HELIUS_RATE_LIMIT=1000
# Requests per minute (Helius Premium)

QUICKNODE_RATE_LIMIT=100
# Requests per second

DEXSCREENER_RATE_LIMIT=300
# Requests per minute

JUPITER_RATE_LIMIT=100
# Requests per minute

# ALGORITHMIC_PROCESSING_RATE=1000
# Maximum analyses per minute (very fast due to no AI latency)

# =============================================================================
# Security Configuration
# =============================================================================
ENABLE_FIREWALL=true
ALLOWED_IPS=127.0.0.1,::1
# Comma-separated list of allowed IP addresses

API_KEY_HEADER=X-API-Key
# Header name for API key authentication

JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRY_HOURS=24

# =============================================================================
# Development Configuration
# =============================================================================
MOCK_APIS=false
# Set to true to use mock API responses for testing

SKIP_TLS_VERIFY=false
# Skip TLS certificate verification (only for development)

VERBOSE_LOGGING=false
# Enable verbose logging for debugging

PROFILE_PERFORMANCE=false
# Enable performance profiling

# =============================================================================
# Advanced Configuration
# =============================================================================
SIMULATION_MODE=false
# Run in simulation mode (no real trades)

BACKTEST_MODE=false
# Run backtesting mode

STRATEGY_OPTIMIZATION=false
# Enable strategy optimization

MACHINE_LEARNING=false
# Enable ML features (experimental)

MULTI_CHAIN=false
# Enable multi-chain support (future feature)

# =============================================================================
# Solana Network Configuration
# =============================================================================
SOLANA_NETWORK=mainnet-beta
# Options: mainnet-beta, testnet, devnet

COMMITMENT_LEVEL=confirmed
# Options: processed, confirmed, finalized

PREFETCH_ACCOUNTS=true
# Prefetch account data for performance

# =============================================================================
# Backup and Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

AUTO_RECOVERY=true
RECOVERY_CHECK_INTERVAL_MINUTES=5

# =============================================================================
# Custom Configuration
# =============================================================================
# Add any custom environment variables here
# CUSTOM_VAR=value