# Installation
install:
	pip install -r requirements.txt

install-dev:
	pip install -r requirements-dev.txt
	pre-commit install

# Testing
test:
	python run_tests.py

test-fast:
	python run_tests.py --fast

test-coverage:
	python run_tests.py --coverage

# Code quality
lint:
	mypy src/ python/
	flake8 src/ python/
	bandit -r src/ python/

format:
	black src/ python/
	isort src/ python/

# Cleanup
clean:
	find . -type d -name "__pycache__" -exec rm -rf {} +
	find . -type f -name "*.pyc" -delete
	find . -type f -name "*.pyo" -delete
	rm -rf .pytest_cache
	rm -rf htmlcov
	rm -rf .coverage
	rm -rf .mypy_cache
	rm -rf build/
	rm -rf dist/
	rm -rf *.egg-info/

# Build and run
build:
	@echo "Building MojoRust trading bot..."
	./scripts/build_and_deploy.sh --skip-deploy --skip-docker-build

build-all:
	@echo "Building all components (Rust + Mojo + Docker)..."
	./scripts/build_and_deploy.sh --skip-deploy

build-rust:
	@echo "Building Rust modules..."
	./scripts/build_rust_modules.sh

build-mojo:
	@echo "Building Mojo binary..."
	./scripts/build_mojo_binary.sh

deploy:
	@echo "Building and deploying trading bot..."
	./scripts/build_and_deploy.sh

deploy-docker:
	@echo "Deploying with Docker Compose..."
	docker-compose up -d

run:
	@echo "Running MojoRust trading bot..."
	./target/release/trading-bot --mode=paper --capital=1.0

# Docker
docker-build:
	docker build -t mojorust/trading-bot .

docker-run:
	docker-compose up -d

# Development helpers
dev-setup: install-dev
	@echo "Development environment setup complete!"
	@echo "Run 'source .venv/bin/activate' to activate virtual environment"

# Verification and health checks
verify-build:
	@echo "Verifying build output..."
	@if [ -f target/release/trading-bot ]; then \
		echo "‚úÖ Mojo binary built successfully"; \
	else \
		echo "‚ùå Mojo binary not found"; \
		exit 1; \
	fi
	@if [ -d rust-modules/target/release ]; then \
		echo "‚úÖ Rust modules built successfully"; \
	else \
		echo "‚ùå Rust modules not found"; \
		exit 1; \
	fi

verify-deploy:
	@echo "Verifying deployment..."
	@curl -s http://localhost:8082/health > /dev/null && echo "‚úÖ Trading bot healthy" || echo "‚ùå Trading bot not responding"
	@docker-compose ps | grep -q "Up" && echo "‚úÖ Services running" || echo "‚ùå Services not running"

clean-all: clean
	@echo "Cleaning all build artifacts..."
	@rm -rf .mojo_cache
	@rm -rf target/
	@rm -rf rust-modules/target/
	@docker system prune -f

check: lint test
	@echo "All checks passed!"

ci: install-dev lint test-coverage
	@echo "CI pipeline completed!"

# =============================================================================
# Monitoring Stack Management
# =============================================================================

# Start monitoring stack
monitoring-start:
	@echo "üöÄ Starting monitoring stack..."
	./scripts/start_monitoring_stack.sh
	@echo "‚úÖ Monitoring stack started successfully!"
	@echo "üìä Grafana: http://localhost:3001 (admin/trading_admin)"
	@echo "üìà Prometheus: http://localhost:9090"
	@echo "üö® AlertManager: http://localhost:9093"

# Stop monitoring stack
monitoring-stop:
	@echo "‚èπÔ∏è  Stopping monitoring stack..."
	docker-compose stop prometheus grafana alertmanager node-exporter
	@echo "‚úÖ Monitoring stack stopped!"

# Restart monitoring stack
monitoring-restart:
	@echo "üîÑ Restarting monitoring stack..."
	$(MAKE) monitoring-stop
	sleep 5
	$(MAKE) monitoring-start

# Check monitoring stack status
monitoring-status:
	@echo "üìä Monitoring Stack Status:"
	@echo "=========================="
	docker-compose ps prometheus grafana alertmanager node-exporter
	@echo ""
	@echo "üîó Service URLs:"
	@echo "Grafana:     http://localhost:3001 (admin/trading_admin)"
	@echo "Prometheus:  http://localhost:9090"
	@echo "AlertManager: http://localhost:9093"
	@echo "Node Exporter: http://localhost:9100/metrics"

# Verify monitoring stack health
monitoring-verify:
	@echo "üîç Verifying monitoring stack health..."
	./scripts/verify_monitoring_stack.sh
	@echo "‚úÖ Monitoring stack verification completed!"

# Quick health checks
monitoring-health:
	@echo "üè• Quick Monitoring Health Check:"
	@echo "================================="
	@echo "Checking Prometheus..."
	@curl -s http://localhost:9090/-/healthy > /dev/null && echo "‚úÖ Prometheus: HEALTHY" || echo "‚ùå Prometheus: UNHEALTHY"
	@echo "Checking Grafana..."
	@curl -s http://localhost:3001/api/health > /dev/null && echo "‚úÖ Grafana: HEALTHY" || echo "‚ùå Grafana: UNHEALTHY"
	@echo "Checking AlertManager..."
	@curl -s http://localhost:9093/-/healthy > /dev/null && echo "‚úÖ AlertManager: HEALTHY" || echo "‚ùå AlertManager: UNHEALTHY"
	@echo "Checking Node Exporter..."
	@curl -s http://localhost:9100/metrics | head -1 > /dev/null && echo "‚úÖ Node Exporter: HEALTHY" || echo "‚ùå Node Exporter: UNHEALTHY"

# Import Grafana dashboards
monitoring-import-dashboards:
	@echo "üìä Importing Grafana dashboards..."
	./scripts/import_grafana_dashboards.sh --force
	@echo "‚úÖ Dashboards imported successfully!"

# Show monitoring service logs
monitoring-logs:
	@echo "üìã Monitoring Service Logs:"
	@echo "=========================="
	@echo "üîç Select service to view logs:"
	@echo "1) Prometheus"
	@echo "2) Grafana"
	@echo "3) AlertManager"
	@echo "4) Node Exporter"
	@echo "5) All services"
	@read -p "Enter choice (1-5): " choice; \
	case $$choice in \
		1) docker-compose logs -f prometheus ;; \
		2) docker-compose logs -f grafana ;; \
		3) docker-compose logs -f alertmanager ;; \
		4) docker-compose logs -f node-exporter ;; \
		5) docker-compose logs -f prometheus grafana alertmanager node-exporter ;; \
		*) echo "Invalid choice" ;; \
	esac

# Backup monitoring configurations
monitoring-backup:
	@echo "üíæ Backing up monitoring configurations..."
	@mkdir -p backups/monitoring
	@docker-compose exec prometheus cat /etc/prometheus/prometheus.yml > backups/monitoring/prometheus_$(shell date +%Y%m%d_%H%M%S).yml
	@docker-compose exec grafana cat /etc/grafana/grafana.ini > backups/monitoring/grafana_$(shell date +%Y%m%d_%H%M%S).ini
	@docker-compose exec alertmanager cat /etc/alertmanager/alertmanager.yml > backups/monitoring/alertmanager_$(shell date +%Y%m%d_%H%M%S).yml
	@tar -czf backups/monitoring/dashboards_$(shell date +%Y%m%d_%H%M%S).tar.gz config/grafana/dashboards/
	@echo "‚úÖ Monitoring configurations backed up to backups/monitoring/"

# Clean monitoring data
monitoring-cleanup:
	@echo "üßπ Cleaning monitoring data..."
	@echo "‚ö†Ô∏è  This will remove all monitoring data. Are you sure? [y/N]"
	@read -r confirm; \
	if [ "$$confirm" = "y" ] || [ "$$confirm" = "Y" ]; then \
		docker-compose stop prometheus grafana alertmanager; \
		docker volume rm trading-bot_prometheus_data trading-bot_grafana_data trading-bot_alertmanager_data 2>/dev/null || true; \
		echo "‚úÖ Monitoring data cleaned. Restart with 'make monitoring-start'"; \
	else \
		echo "‚ùå Cleanup cancelled"; \
	fi

# Test alert delivery
monitoring-test-alerts:
	@echo "üö® Testing alert delivery..."
	@curl -XPOST http://localhost:9093/api/v1/alerts \
		-H "Content-Type: application/json" \
		-d '[{"labels":{"alertname":"TestAlert","severity":"warning","instance":"test"},"annotations":{"summary":"Test alert notification","description":"This is a test alert to verify notifications are working"}}]' \
		&& echo "‚úÖ Test alert sent successfully!" || echo "‚ùå Failed to send test alert"

# Update monitoring configurations
monitoring-update-config:
	@echo "üîÑ Updating monitoring configurations..."
	@echo "Reloading Prometheus configuration..."
	@curl -X POST http://localhost:9090/-/reload > /dev/null && echo "‚úÖ Prometheus configuration reloaded!" || echo "‚ùå Failed to reload Prometheus configuration"
	@echo "Restarting Grafana to apply changes..."
	@docker-compose restart grafana && echo "‚úÖ Grafana restarted!" || echo "‚ùå Failed to restart Grafana"
	@echo "Restarting AlertManager to apply changes..."
	@docker-compose restart alertmanager && echo "‚úÖ AlertManager restarted!" || echo "‚ùå Failed to restart AlertManager"

# Check monitoring port availability
monitoring-check-ports:
	@echo "üîç Checking monitoring port availability..."
	@echo "Checking required ports: 9090, 3001, 9093, 9100"
	@./scripts/verify_port_availability.sh --port 9090 --port 3001 --port 9093 --port 9100
	@echo "‚úÖ Port availability check completed!"

# Complete monitoring health check
monitoring-full-check: monitoring-status monitoring-health monitoring-verify
	@echo ""
	@echo "üéâ Complete monitoring health check finished!"
	@echo "üìä Access dashboards at: http://localhost:3001 (admin/trading_admin)"

# Development monitoring setup (includes monitoring in dev workflow)
dev-with-monitoring: install-dev monitoring-start
	@echo "üöÄ Development environment with monitoring ready!"
	@echo "üìä Grafana: http://localhost:3001 (admin/trading_admin)"

# Test with monitoring
test-with-monitoring: monitoring-start test
	@echo "‚úÖ Tests completed with monitoring active!"

# Production deployment with monitoring
deploy-with-monitoring: monitoring-start docker-run
	@echo "üöÄ Production deployment with monitoring complete!"
	@echo "üìä Monitor at: http://localhost:3001"

# =============================================================================
# Additional Monitoring Targets (Aliases & Convenience Functions)
# =============================================================================

# Start monitoring services (alias)
start-monitoring: monitoring-start
	@echo "‚úÖ Monitoring services started"

# Stop monitoring services (alias)
stop-monitoring: monitoring-stop
	@echo "‚èπÔ∏è  Monitoring services stopped"

# Restart monitoring services (alias)
restart-monitoring: monitoring-restart
	@echo "üîÑ Monitoring services restarted"

# Show monitoring status (alias)
status-monitoring: monitoring-status
	@echo "üìä Monitoring status displayed above"

# Verify monitoring health (alias)
verify-monitoring: monitoring-verify
	@echo "‚úÖ Monitoring verification completed"

# Show Prometheus targets status
prometheus-targets:
	@echo "üéØ Prometheus Targets Status:"
	@echo "=========================="
	@curl -s "$(PROMETHEUS_URL)/api/v1/targets" | jq -r '.data.activeTargets[] | "\(.labels.job): \(.health) (\(.labels.instance // "unknown"))"' || echo "‚ùå Failed to fetch Prometheus targets"
	@echo ""
	@echo "üìä Prometheus UI: $(PROMETHEUS_URL)/targets"

# List Grafana dashboards
grafana-dashboards:
	@echo "üìä Grafana Dashboards:"
	@echo "===================="
	@curl -s -u admin:trading_admin "$(GRAFANA_URL)/api/search?type=dash-db" | jq -r '.[] | "\(.title): $(GRAFANA_URL)/d/\(.uid)"' || echo "‚ùå Failed to fetch Grafana dashboards"
	@echo ""
	@echo "üìà Grafana UI: $(GRAFANA_URL)/dashboards"

# Import dashboards (alias)
import-dashboards: monitoring-import-dashboards
	@echo "üìä Dashboards imported successfully"

# View monitoring logs (alias)
logs-monitoring: monitoring-logs
	@echo "üìã Monitoring logs displayed above"

# Quick monitoring health check (alias)
health-monitoring: monitoring-health
	@echo "üè• Monitoring health check completed"

# =============================================================================
# CPU Optimization Suite
# =============================================================================

# Diagnose CPU usage and identify bottlenecks
cpu-diagnose:
	@echo "üîç Diagnosing CPU usage and identifying bottlenecks..."
	./scripts/diagnose_cpu_usage.sh --watch
	@echo "‚úÖ CPU diagnostics completed!"

# Optimize VS Code CPU usage
cpu-optimize-vscode:
	@echo "‚ö° Optimizing VS Code CPU usage..."
	./scripts/optimize_vscode_cpu.sh --auto
	@echo "‚úÖ VS Code optimization completed!"

# Apply system-level CPU optimizations
cpu-optimize-system:
	@echo "üîß Applying system-level CPU optimizations..."
	./scripts/apply_system_optimizations.sh --auto
	@echo "‚úÖ System optimization completed!"

# Start continuous CPU monitoring
cpu-monitor:
	@echo "üìä Starting continuous CPU monitoring..."
	./scripts/monitor_cpu_continuous.sh --daemon --threshold 80 --webhook http://localhost:3001/api/webhooks
	@echo "‚úÖ CPU monitoring started in background!"
	@echo "üìä View real-time metrics at: http://localhost:3001"

# Run complete CPU optimization suite
cpu-optimize-all: cpu-diagnose cpu-optimize-vscode cpu-optimize-system cpu-monitor
	@echo ""
	@echo "üéâ Complete CPU optimization suite finished!"
	@echo "üìä System is now optimized for maximum performance"
	@echo "üîç Monitor CPU usage with: make cpu-diagnose"
	@echo "üìä View monitoring dashboard at: http://localhost:3001"

# Quick CPU health check
cpu-health:
	@echo "üè• Quick CPU Health Check:"
	@echo "========================="
	@echo "Current CPU usage:"
	@top -bn1 | grep "Cpu(s)" | awk '{print "  CPU Load: " $$2 " (user), " $$4 " (system), " $$8 " (idle)"}'
	@echo "VS Code processes:"
	@ps aux | grep -i "code" | grep -v grep | awk '{sum += $$3} END {if (sum > 0) print "  VS Code CPU: " sum "%"}' || echo "  VS Code CPU: 0%"
	@echo "Docker container CPU usage:"
	@docker stats --no-stream --format "table {{.Container}}\t{{.CPUPerc}}" | grep -v CONTAINER || echo "  No running containers"
	@echo ""

# CPU usage alerting test
cpu-test-alerts:
	@echo "üö® Testing CPU alerting..."
	@curl -X POST http://localhost:8082/metrics \
		-H "Content-Type: application/json" \
		-d '{"cpu_usage": 95, "memory_usage": 80, "timestamp": "'$$(date -Iseconds)'"}' \
		&& echo "‚úÖ CPU alert test sent!" || echo "‚ùå Failed to send CPU alert test"

# Stop CPU monitoring
cpu-stop-monitor:
	@echo "‚èπÔ∏è Stopping CPU monitoring..."
	@pkill -f "monitor_cpu_continuous.sh" && echo "‚úÖ CPU monitoring stopped!" || echo "‚ùå CPU monitoring not running"

# Generate CPU optimization report
cpu-report:
	@echo "üìã Generating CPU optimization report..."
	@mkdir -p reports
	@./scripts/diagnose_cpu_usage.sh --json > reports/cpu_report_$$(date +%Y%m%d_%H%M%S).json
	@echo "‚úÖ CPU optimization report generated in reports/"
	@echo "üìä View the latest report: reports/cpu_report_$$(date +%Y%m%d_%H%M%S).json"
